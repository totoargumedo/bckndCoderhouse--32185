<div
  class="container-fluid mt-3 d-flex flex-column justify-content-between align-items-center"
  id="mainContainer"
>
  <table class="mt-3 table table-hover bg-dark bg-opacity-75 text-light">
    <tbody id="tableBody">
      {{! aqui inserta filas el socket }}
    </tbody>
  </table>

  <div class="container w-100 p-3 bg-dark bg-opacity-75 text-light rounded">
    <form class="row g-3" id="chatForm">
      <div class="col-md-4">
        <input
          name="email"
          type="text"
          class="form-control"
          placeholder="mail@mail.com"
          required
        />
      </div>
      <div class="col-md-4">
        <div class="input-group">
          <input
            name="avatar"
            type="url"
            class="form-control"
            placeholder="Avatar"
            aria-describedby="inputGroupPrepend"
            required
          />
        </div>
      </div>
      <div class="col-md-4">
        <input
          name="textChat"
          type="text"
          class="form-control"
          placeholder="Escribe aquÃ­ tu texto"
          required
        />
      </div>

      <div class="d-flex justify-content-center align-items-center">
        <button
          class="btn btn-outline-success"
          type="submit"
          id="buttonChat"
        >Enviar</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/chat.js" type="module"></script>