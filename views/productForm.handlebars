<div
  class="container-fluid mt-3 d-flex flex-column justify-content-between align-items-center"
  id="mainContainer"
>
  <div class="container w-100 p-3 bg-dark bg-opacity-75 text-light rounded">
    <form class="row g-3" id="productForm">
      <div class="col-md-4">
        <label for="title" class="form-label">Nombre</label>
        <input
          name="title"
          type="text"
          class="form-control"
          placeholder="Pendrive 32GB"
          required
        />
      </div>
      <div class="col-md-4">
        <label for="price" class="form-label">Precio</label>
        <input
          name="price"
          type="number"
          class="form-control"
          placeholder="1234"
          required
        />
      </div>
      <div class="col-md-4">
        <label for="thumbnail" class="form-label">Imagen</label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend">www</span>
          <input
            name="thumbnail"
            type="url"
            class="form-control"
            aria-describedby="inputGroupPrepend"
            required
          />
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <button
          class="btn btn-outline-success"
          type="submit"
          id="buttonForm"
        >Enviar</button>
      </div>
    </form>
  </div>

  <table
    class="mt-3 table table-hover table-bordered bg-dark bg-opacity-75 text-light"
  >
    <thead class="bg-light text-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Miniatura</th>
      </tr>
    </thead>
    <tbody id="tableBody">

    </tbody>
  </table>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div
    id="liveToast"
    class="toast"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >

  </div>
</div>
