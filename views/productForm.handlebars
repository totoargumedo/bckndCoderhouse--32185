<div class="container-fluid d-flex justify-content-center align-items-center">
  <div class="container w-100 p-5 bg-dark bg-opacity-75 text-light rounded">
    <form action="/api/productos" method="POST" class="row g-3">
      <div class="col-md-4">
        <label for="title" class="form-label">Nombre</label>
        <input
          name="title"
          type="text"
          class="form-control"
          value="Pendrive 32GB"
          required
        />
      </div>
      <div class="col-md-4">
        <label for="price" class="form-label">Precio</label>
        <input
          name="price"
          type="number"
          class="form-control"
          value="1234"
          required
        />
      </div>
      <div class="col-md-4">
        <label for="thumbnail" class="form-label">Imagen</label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend">www</span>
          <input
            name="thumbnail"
            type="url"
            class="form-control"
            aria-describedby="inputGroupPrepend"
            required
          />
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <button class="btn btn-outline-success" type="submit">Enviar</button>
      </div>
    </form>
  </div>
</div>

{{#if added}}
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div
      id="liveToast"
      class="toast"
      role="alert"
      aria-live="assertive"
      aria-atomic="true"
    >
      <div class="toast-header">
        <img
          style="height:25px"
          src="{{productImage}}"
          class="rounded me-2"
          alt="{{productTitle}}"
        />
        <strong class="me-auto">Carga exitosa</strong>
        <small>justo ahora</small>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="toast"
          aria-label="Close"
        ></button>
      </div>
      <div class="toast-body">
        {{productTitle}}
        agregado correctamente
      </div>
    </div>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
  <script>

    new bootstrap.Toast(document.getElementById('liveToast')).show()
  </script>
{{/if}}