<div
  class="d-flex flex-wrap flex-shrink-1 justify-content-between align-items-center gap-2 p-2"
>
  {{#if multiple}}
    {{#each elements}}
      <div class="card bg-dark bg-opacity-75 text-light" style="width: 18rem;">
        <img
          src="{{this.thumbnail}}"
          class="card-img-top p-3"
          alt="{{this.title}}"
        />
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title">{{this.title}}</h5>
            <h5 class="card-title">{{this.price}}</h5>
          </div>
          <p class="card-text">Descripcion del producto en si</p>
          <div class="d-flex justify-content-center">
            <a
              href="/api/productos/{{this.id}}"
              class="btn btn-outline-success"
            >Ver mas</a>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <div class="card bg-dark bg-opacity-75 text-light" style="width: 18rem;">
      <img
        src="{{elements.thumbnail}}"
        class="card-img-top p-3"
        alt="{{elements.title}}"
      />
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="card-title">{{elements.title}}</h5>
          <h5 class="card-title">{{elements.price}}</h5>
        </div>
        <p class="card-text">Descripcion del producto en si existiera</p>
      </div>
    </div>
  {{/if}}
</div>